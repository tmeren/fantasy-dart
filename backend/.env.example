# Fantasy Darts Backend Configuration
# Copy to .env and fill in values

# Database — PostgreSQL for production, SQLite for local dev
# DATABASE_URL=postgresql://user:password@host:5432/fantasy_darts
# Leave unset to use SQLite (sqlite:///./darts_betting.db)

# JWT Secret — MUST set a strong secret for production
SECRET_KEY=change-me-in-production

# Email (Resend) — for magic link login
RESEND_API_KEY=
APP_URL=http://localhost:3000

# CORS — comma-separated origins for production
# CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# Fernet encryption key — for phone number encryption at rest (GDPR/KVKK)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CRITICAL: Set this in Railway to persist encryption across deploys.
# Without it, an ephemeral key is generated and encrypted data becomes unreadable after redeploy.
FERNET_KEY=
